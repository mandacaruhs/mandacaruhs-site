/* VARIABLES
================================================== */
$color-1 = #44620D
$color-2 = #F6A300
$color-3 = #C26A0B
$color-text = #565555

$main-font = @block {
  font-family 'Roboto Slab', serif
}

$secondary-font = @block {
  font-family 'KingsofKingsLynn', serif
}


/* GLOBAL
================================================== */
html, body
  height 100%

body
  {$main-font}
  font-size 16px
  font-weight 400
  color $color-text
  background-color #EEE

a
  color $color-2

  &:hover, &:focus
    color darken($color-2, 10%)

.text-white
  color white

a.text-white
  &:hover, &:focus
    color $color-2

.btn
  border-radius 0
  line-height 1em

.btn-default
  background-color #d4d4d4
  border-color #d4d4d4

  &:hover, &:focus
    border-color #e6e6e6

.btn-primary
  background-color $color-1
  border-color $color-1
  font-size 1.5em
  font-weight 600
  text-transform uppercase
  padding 0.5em 2em 0.65em

  &:hover, &:focus
    background-color darken($color-1, 10%)
    border-color darken($color-1, 10%)

.carousel-fade
  .carousel-inner
    .item
      transition-property opacity

    .item,
    .active.left,
    .active.right
      opacity 0

    .active,
    .next.left,
    .prev.right
      opacity 1

    .next,
    .prev,
    .active.left,
    .active.right
      left 0
      transform translate3d(0, 0, 0)

  .carousel-control
    z-index 2


/* ELEMENTS
================================================== */
.section
  position relative
  padding 30px 0
  background-repeat no-repeat
  background-position center
  background-size cover

  &.section-large
    padding 50px 0

  &.section-fullwidth
    padding 0

  .row
    padding-top 20px
    padding-bottom 20px

    .row-inner
      padding-top 0
      padding-bottom 0

.section-bg-gray
  background-color #ececec

.section-title
  {$secondary-font}
