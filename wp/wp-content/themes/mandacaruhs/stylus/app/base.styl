hr.spacer
  border 0
  margin 0
  height 1px

.panel-widget
  position relative
  background-color transparent
  background-size cover
  background-position center
  background-repeat no-repeat
  border 0
  border-radius 0
  box-shadow none
  margin-bottom 0
  padding 20px 15px 15px
  height 480px

  &:before
    content ""
    absolute top 20px bottom 15px left 15px right 15px
    background-color white
    border-radius 4px

  &.size-2
    background-image url("../images/bg-widget-2.png")

  &.size-3
    background-image url("../images/bg-widget-3.png")

  .panel-body
    position relative

  &.no-padding .panel-body
    padding 0


.list-events
  margin-bottom 0

  .media + .media
    margin-top 10px

  .media a
    color $color-text

  .media-left a
    text-decoration none

  .media-object
    text-align center
    background-color #EEE
    width 75px
    padding 8px 5px

    span
      display block
      line-height 1em

    .day, .month
      text-transform uppercase
      font-weight 700

    .day
      font-size 11px

    .month
      font-size 15px

    .date
      font-weight 900
      font-size 35px
      line-height 0.95em

  .media-heading
    font-size 1em
    font-weight bold

  .media-body p
    font-size 0.9em
    margin-bottom 0



/* HEADER
================================================== */
#main-nav
  margin-bottom 0

  .navbar-header
    float none

  .navbar-brand
    height auto
    float none
    display inline-block
    padding-top 50px
    padding-bottom 20px

  .navbar-menu
    float none
    background-image url("../images/bg-menu.png")
    background-repeat no-repeat
    background-position center
    background-size cover
    height 70px
    padding 14px


    li a
      {$secondary-font}
      font-size 26px
      text-transform uppercase
      color white
      background none

    li a:hover, li a:focus, li.active a, li.current_page_parent a
      color $color-2

  .navbar-collapse
    position relative

#sign-status
  absolute top -85px right 40px
  size 129px 91px
  background url("../images/status-sign.png") left top no-repeat
  text-decoration none !important
  user-select none

  &:after
    content ""
    absolute top -50px right -30px
    size 101px 65px
    background url("../images/bird.png") left top no-repeat
    opacity 0

  span
    display block
    {$secondary-font}
    color $color-3
    text-align center
    font-size 32px
    line-height 66px
    transform rotate(-7deg) translate(5px,0px)

  &.open
    &:after
      opacity 1

    span
      font-size 36px
      color #597F10
      transition color .2s linear

    &:hover span, &:focus span
      color lighten(#597F10, 15%)


