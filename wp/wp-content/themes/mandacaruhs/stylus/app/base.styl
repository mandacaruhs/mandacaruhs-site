/* EFFECTS
================================================== */
#clouds
  absolute top 0 left 0
  width 100%
  height 100vh
  overflow-x hidden
  background -webkit-linear-gradient(top, #BBB 0%, #EEE 500px)
  background -moz-linear-gradient(top, #BBB 0%, #EEE 500px)
  background linear-gradient(top, #BBB 0%, #EEE 500px)
  z-index -1

  .sun
    size 154px 152px
    background url("../images/sun.png") center no-repeat
    left 50% !important
    margin-left -77px
    margin-top -40px

  .cloud
    size 208px 62px
    background url("../images/cloud.png") center no-repeat

  .inv
    background-image url("../images/cloud-inv.png")

  .x1
    margin-left 4%
    margin-top 6%

  .x2
    margin-left 25%
    margin-top 30px
    background-size 90%
    opacity 0.9

  .x3
    margin-left 10%
    margin-top 20%
    background-size 80%
    opacity 0.8

  .x4
    left initial !important
    right 0
    margin-right 4%
    margin-top 8%
    background-size 75%
    opacity 0.75

  .x5
    left initial !important
    right 0
    margin-right 25%
    margin-top 60px
    opacity 0.8
